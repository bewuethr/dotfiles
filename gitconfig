[core]
    editor = vim
    excludesfile = ~/.gitignore
[color]
    ui = auto
[pull]
    ff = only
[push]
    default = simple
    followTags = true
[merge]
    ff = true
[diff]
    tool = vimdiff

# Local settings
[include]
    path = ~/.gitconfig_local

# Make sure that dotfiles repos always use same user
[includeIf "gitdir:~/.dotfiles/.git"]
    path = ~/.dotfiles/.gitconfig

[includeIf "gitdir:~/.dotfiles_local/.git"]
    path = ~/.dotfiles_local/.gitconfig
[filter "expand"]
    clean = expand -t 4
    smudge = unexpand -t 4
